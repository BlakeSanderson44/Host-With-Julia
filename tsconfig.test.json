{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist-tests",
    "module": "commonjs",
    "target": "es2019",
    "moduleResolution": "node",
    "allowJs": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@testing-library/react": ["vendor/@testing-library/react/index"],
      "@testing-library/react/*": ["vendor/@testing-library/react/*"],
      "@/*": ["./*"]
    }
  },
  "include": [
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "app/api/**/*.ts",
    "types/**/*.d.ts"
  ]
}
